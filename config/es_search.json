{
  "query" : {
    "multi_match": {
      "query": "%s",
      "fields": ["content", "title^2", "desc^2", "tags^3", "article_category.name^4", "author.name^5"],
      "analyzer": "ik_smart"
    }
  },
  "fields":{
    "title":{
      "type":"plain",
      "pre_tags":"<span style='background-color:#bfa;padding:1px;'>",
      "post_tags":"</span>"
    },
    "tags":{
      "type":"plain",
      "pre_tags":"<span style='background-color:#bfa;padding:1px;'>",
      "post_tags":"</span>"
    },
    "article_category.name":{
      "type":"plain",
      "pre_tags":"<span style='background-color:#bfa;padding:1px;'>",
      "post_tags":"</span>"
    },
    "content":{
      "type":"plain",
      "pre_tags":"<span style='background-color:#bfa;padding:1px;'>",
      "post_tags":"</span>",
      "fragment_size":10,
      "number_of_fragments":2
    },
    "desc":{
      "type":"plain",
      "fragment_size":10,
      "number_of_fragments":2
    }
  },
  "pre_tags":"<span style='color:red'>",
  "post_tags":"</span>"
}
